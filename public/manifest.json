{
  "manifest_version": 3,

  "name": "My Extension",
  "description": "This extension is a starting point to create a real Chrome extension",
  "version": "0.0.1",

  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "/images/16.png",
      "32": "/images/32.png",
      "48": "/images/48.png",
      "128": "/images/128.png"
    }
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "/js/background.js"
  },
  "host_permissions": ["http://localhost/*", "*://*/*", "<all_urls>"],
  "icons": {
    "16": "/images/16.png",
    "32": "/images/32.png",
    "48": "/images/48.png"
  },
  "permissions": ["storage", "activeTab", "scripting", "cookies", "contextMenus"]
}